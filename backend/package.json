{
  "name": "hapi-typescript-backend",
  "version": "1.0.0",
  "description": "A sample Hapi.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "start": "node dist/server.js",
    "no-dev": "node_modules/.bin/nodemon --exec ts-node src/server.ts",
    "dev": "nodemon --watch src --ext ts --exec 'ts-node src/server.ts'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "hapi",
    "typescript",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/hapi": "^21.3.2",
    "@types/hapi__catbox": "^10.2.6",
    "ioredis": "^5.6.1",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/hapi__hapi": "^21.0.0",
    "@types/node": "^20.17.50",
    "eslint": "^9.27.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
