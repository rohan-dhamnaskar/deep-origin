{
  "name": "hapi-typescript-backend",
  "version": "1.0.0",
  "description": "A sample Hapi.js backend with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "start": "node dist/server.js",
    "no-dev": "node_modules/.bin/nodemon --exec ts-node src/server.ts",
    "dev": "nodemon --watch src --ext ts --exec 'ts-node src/server.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "hapi",
    "typescript",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/joi": "^17.1.1",
    "@types/ioredis": "^4.28.10",
    "@types/pg": "^8.15.2",
    "pg": "^8.16.0",
    "redis": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/hapi__hapi": "^21.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/node": "^20.17.50",
    "@types/redis": "^4.0.10",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
